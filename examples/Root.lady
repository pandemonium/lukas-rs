Dollars ::=
  { The_Good :: Int
    The_Bad  :: Text
    The_Ugly :: Perhaps Int
  }

make_one := lambda good bad.
  { The_Good: good; The_Bad: bad; The_Ugly: Nope }

dollars :: Text :=
  deconstruct
    make_one 1 "Sylvester"
  into
    { The_Good: good; The_Bad: bad; The_Ugly: This ugly } ->
        "`good`, `bad`, `ugly`"
  | { The_Good: good; The_Bad: bad; The_Ugly: Nope }       ->
        "`good`, `bad`"


